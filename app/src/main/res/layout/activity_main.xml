<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="31"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/space"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Value %"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/valuePar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bulff %"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:id="@+id/bulffPar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Flop"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/flop"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/flopValuePercent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:id="@+id/flopBulffPercent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Turn"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/turn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/turnValuePercent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:id="@+id/turnBulffPercent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="River"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/River"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:id="@+id/riverValuePercent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border"
            android:id="@+id/riverBulffPercent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:text="flop bet size"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:backgroundTint="#20b2aa"
            android:id="@+id/flopBetSize"
            android:layout_margin="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="turn bet size"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:backgroundTint="#20b2aa"
            android:id="@+id/turnBetSize"
            android:layout_margin="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="river bet size"
            android:textStyle="italic"
            android:gravity="center"
            android:backgroundTint="#20b2aa"
            android:background="@drawable/border"
            android:id="@+id/riverBetSize"
            android:layout_margin="2dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="12">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="27sp"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/editFlopBet" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="％"
            android:textStyle="italic"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="27sp"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/editTurnBet" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="％"
            android:textStyle="italic"
            android:gravity="center" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="27sp"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/editRiverBet" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="％"
            android:textStyle="italic"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textStyle="italic"
            android:gravity="center"
            android:text="value equity"
            android:background="@drawable/border"
            android:layout_weight="2"
            android:backgroundTint="#eb6ea5"
            android:layout_margin="2dp"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:textStyle="italic"
            android:gravity="center"
            android:text="bulff equity"
            android:background="@drawable/border"
            android:layout_weight="2"
            android:backgroundTint="#eb6ea5"
            android:layout_margin="2dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/AC"
            android:textSize="15sp"
            android:textStyle="italic"
            android:background="@drawable/custom_button"
            android:backgroundTint="@null"
            android:layout_margin="2dp"
            android:onClick="tapAC"
            android:id="@+id/ac"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="33sp"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/valueEquity" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="27sp"
            android:text="％"
            android:textStyle="italic"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="33sp"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/bulffEquity" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="27sp"
            android:text="％"
            android:textStyle="italic"
            android:gravity="center" />



        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/OK"
            android:textSize="17sp"
            android:textStyle="italic"
            android:background="@drawable/custom_button"
            android:layout_margin="2dp"
            android:backgroundTint="@null"
            android:onClick="tapOK"
            android:id="@+id/okbtn"
            />

    </LinearLayout>






</LinearLayout>